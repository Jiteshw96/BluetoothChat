<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="45dp" />

        <Button
            android:id="@+id/btn_insecurescan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan"
            android:visibility="gone"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="45dp" />

        <Button
            android:layout_marginLeft="50dp"
            android:id="@+id/btn_discoverable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discoverable"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="45dp" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_connect_specific_device"
        android:text="Connect Specific Device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_recive_msg"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_send_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/mSendButton"
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>